@require '../shared/layout/global.variables'

:host
    display block
    width 100%
    h1
        text-align center
    ul
        display flex
        flex-wrap wrap
        justify-content space-around
        list-style none
        margin 0
        padding 0
        .tile
            widthHeight 150px 300px
            a
                display block
                widthHeight 100%
                span
                    display inline-block
                    text-align center
                    text-transform uppercase
                    width 100%
            img
                border $primary-light 1px solid
                border-radius 3px
                widthHeight 100%

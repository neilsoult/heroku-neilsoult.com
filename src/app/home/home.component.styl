@require '../shared/layout/global.variables'
$border-width = 10px
$double-bw = 'calc(2 * %s)' % $border-width

:host
    display block
    width 100%
    ul
        list-style none
        margin 0
        padding 0
        li
            background $primary-lightest
            margin $border-width
            widthHeight 'calc(100% - %s)' % $double-bw 'calc(10em - %s)' % $double-bw
            &:nth-child(4n + 1)
                background $complement-lightest
            &:nth-child(4n + 2)
                background $secondary-1-lightest
            &:nth-child(4n + 3)
                background $secondary-2-lightest
            &:nth-child(even) a span
                text-align right
            a
                display block
                widthHeight 100%
                span
                    color $white
                    display inline-block
                    margin 0 1em
                    sansSemibold '2em/1.5'
                    text-align left
                    text-transform uppercase
                    width calc(100% - 2em)
            img
                height 100%

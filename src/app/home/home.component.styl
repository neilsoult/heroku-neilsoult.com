@require '../shared/layout/global.variables'

:host
    display block
    width 100%
    h1
        text-align center
    ul
        display flex
        flex-wrap wrap
        justify-content space-around
        list-style none
        margin 0
        padding 0
        .tile
            border $primary-light 1px solid
            border-radius 3px
            min-width 150px
            min-height 300px
            a
                display block
                widthHeight 100%